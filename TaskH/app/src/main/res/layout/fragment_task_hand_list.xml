<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.TaskHandListFragment">
    <LinearLayout
        android:id="@+id/sort_data"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/sort_by_priority"
            android:text="@string/sort_by_priority"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/sort_by_creation"
            android:text="@string/sort_by_creation"/>
    </LinearLayout>
    <ListView
        android:layout_margin="5dp"
        android:dividerHeight="0dp"
        android:id="@+id/task_hand_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:layout_above="@+id/sort_data"/>

</RelativeLayout>
